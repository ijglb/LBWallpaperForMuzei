<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LBWallpaperForMuzei" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Muzei" parent="Theme.AppCompat.DayNight">
        <item name="actionBarStyle">@style/Widget.Muzei.ActionBar</item>
        <item name="colorAccent">@color/vergePink</item>
        <item name="colorPrimary">?android:color</item>
<!--        <item name="android:statusBarColor">?android:colorBackground</item>-->
    </style>

    <style name="Widget.Muzei.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@null</item>
        <item name="displayOptions">homeAsUp|showTitle</item>
    </style>
</resources>